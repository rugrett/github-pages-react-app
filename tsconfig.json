{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "watch": true,
    "jsx": "react",
    "rootDir": "src/",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts"
  ]
}