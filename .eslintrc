{
  "root": true,
  "extends": "eslint:recommended",
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "allowImportExportEverywhere": false,
    "project": [
      "./.eslintrc.json"
    ],
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "eqeqeq": "off",
    "curly": "error"
  }
}
